<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menus.Registrar.registrar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="57dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/company256"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:padding="10dp"
                android:text="Registro"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/FRegistrarNombreEmpresa"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:singleLine="true"
                android:background="@drawable/edittext_withborder"
                android:hint="Nombre Empresa"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/primaryDarkColor"
                android:textColorHint="#9A9797"
                android:textSize="15dp"></EditText>

            <EditText
                android:id="@+id/FRegistrarDireccion"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:singleLine="true"
                android:background="@drawable/edittext_withborder"
                android:hint="Direccion"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/primaryDarkColor"
                android:textColorHint="#9A9797"
                android:textSize="15dp"></EditText>

            <EditText
                android:id="@+id/FRegistrardepartamento"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:singleLine="true"
                android:background="@drawable/edittext_withborder"
                android:hint="Departamento"

                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/primaryDarkColor"
                android:textColorHint="#9A9797"
                android:textSize="15dp"></EditText>

            <EditText
                android:id="@+id/FRegistrarProvincia"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:singleLine="true"
                android:background="@drawable/edittext_withborder"
                android:hint="Provincia"

                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/primaryDarkColor"
                android:textColorHint="#9A9797"
                android:textSize="15dp"></EditText>

            <EditText
                android:id="@+id/FRegistrarTelefono"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:singleLine="true"
                android:background="@drawable/edittext_withborder"
                android:hint="Telefono"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/primaryDarkColor"
                android:textColorHint="#9A9797"
                android:textSize="15dp"></EditText>

            <Spinner
                android:id="@+id/FRegistrarSPdisponibilidad"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edittext_withborder"
                android:entries="@array/disponibilidad"
                android:hint="Password"
                android:padding="15dp"
                android:textColor="#393939"
                android:textColorHint="#696969"
                android:textStyle="bold"></Spinner>

            <EditText
                android:id="@+id/FRegistrarPrecioUnidad"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:singleLine="true"
                android:background="@drawable/edittext_withborder"
                android:hint="Precio x Unidad"

                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/primaryDarkColor"
                android:textColorHint="#9A9797"
                android:textSize="15dp"></EditText>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">



                    <EditText
                        android:id="@+id/FRegistrarLatitud"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:background="@drawable/edittext_withborder"
                        android:layout_weight="2"
                        android:hint="Latitud"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:singleLine="true"
                        android:textColor="@color/primaryDarkColor"
                        android:textColorHint="#9A9797"
                        android:textSize="15dp"
                        android:focusable="false"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteY="0dp"></EditText>


                    <EditText
                        android:id="@+id/FRegistrarLongitud"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="2"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/edittext_withborder"
                        android:focusable="false"
                        android:hint="Longtiud"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:singleLine="true"
                        android:textColor="@color/primaryDarkColor"
                        android:textColorHint="#9A9797"
                        android:textSize="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/FRegistrarLatitud"></EditText>

                    <ImageButton
                        android:id="@+id/FRegistrarbtnLocation"
                        android:layout_width="50dp"
                        android:layout_height="48dp"
                        android:background="@drawable/edittext_withborder"
                        android:clickable="true"
                        android:src="@drawable/pin32"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.68"
                        app:layout_constraintStart_toEndOf="@+id/FRegistrarLongitud"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        tools:ignore="MissingConstraints"></ImageButton>


            </LinearLayout>

            <Spinner
                android:id="@+id/FRegistrarSPTipoServicio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edittext_withborder"
                android:entries="@array/TipoServicios"
                android:hint="Password"
                android:padding="15dp"
                android:textColor="#393939"
                android:textColorHint="#696969"
                android:textStyle="bold"></Spinner>


            <Button
                android:id="@+id/FRegistrarBtnGuardar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button_signup_account"
                android:padding="10dp"
                android:text="Guardar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"></Button>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>