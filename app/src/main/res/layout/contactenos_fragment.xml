<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".menus.Contactenos.contactenos"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="378dp"
                    android:layout_height="580dp"
                    android:layout_gravity="center"
                    android:src="@drawable/businesscard"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="60dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="CONTACTENOS"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="60dp"
                    android:gravity="center"
                    android:text="www.oxigenate.com"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginEnd="40dp"
                    android:gravity="center"
                    android:text="support@oxigenate.com"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20dp"></TextView>




            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:layout_marginTop="640dp"
                android:text="DESARROLLADOR"
                android:textColor="@color/primaryDarkColor"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="60dp"></TextView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:padding="5dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="680dp"
                android:background="@drawable/button_another_account_background"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:text="antonyalikhan@gmail.com"
                android:textColor="@color/primaryTextColor"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"></TextView>



        </RelativeLayout>

    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>